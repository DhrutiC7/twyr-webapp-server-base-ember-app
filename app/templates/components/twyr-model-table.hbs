{{models-table
	data=data
	columns=columns
	columnComponents=(assign columnComponents (hash
		twyrModelTableActions=(component "twyr-model-table-actions"
			callbacks=callbacks
			expandedRowComponent=expandedRowComponent
			inlineEditEnabled=inlineEditEnabled
		)
	))

	themeInstance=themeInstance

	expandedItems=expandedItems
	expandedRowComponent=expandedRowComponent
	multipleExpand=multipleExpand

	selectedItems=selectedItems
	multipleSelect=multipleSelect

	filteringIgnoreCase=true
	multipleColumnsSorting=true
	showComponentFooter=true
	showGlobalFilter=true
	showPageSize=true
	useFilteringByColumns=false
	useNumericPagination=true

	showColumnsDropdown=false

	displayDataChangedAction=(action "displayDataChanged")
}}
