{{#if hasPermission}}
{{#paper-card class="m-0 mt-2 flex" as |card|}}
	{{#card.content class="flex layout-column layout-align-start-stretch"}}
		{{#paper-checkbox value=state.generateRandomPassword onChange=(action (mut state.generateRandomPassword))}}
			Generate Password
		{{/paper-checkbox}}

		{{paper-input type="password" label="Enter new password" value=state.newPassword onChange=(action (mut state.newPassword)) disabled=state.generateRandomPassword}}
	{{/card.content}}
{{/paper-card}}
{{/if}}
